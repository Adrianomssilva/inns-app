<!DOCTYPE html>
<html>
  <head>
    <title>InnsApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <header>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <h1>Encontre a Pousada perfeita</h1>
      <nav class= "menu">
          <%= link_to  "Home", root_path %> | 
          <%= form_with(url: search_inns_path, method: :get ) do |f| %>
            <%= f.label :query, 'Buscar Pousada' %>
            <%= f.text_field :query%>
            <%= f.submit 'Buscar'%>
          <% end %>
          <% if user_signed_in? %>
              Usu√°rio: <%=current_user.email%>
              <%=button_to  "Sair", destroy_user_session_path, method: :delete%>
          <% end %>
          <% if owner_signed_in? %>
              <%=current_owner.email%>
              <%= link_to  "Minha pousada", my_inn_path %>
              <%=button_to  "Sair", destroy_owner_session_path, method: :delete%>
            <% else %>
              <%=link_to  "Entrar", login_index_path%>
          <% end %>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
