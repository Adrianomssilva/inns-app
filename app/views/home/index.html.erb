<h2>Bem vindo a Inns</h2>

<div class="btn-menu">
  <%@cities.each do |inn|%>
  <%= button_to  "#{inn.city}", search_inns_path, params: {query: "#{inn.city}"}, method: :get %>
  <% end %>
</div>

<div class="pousadas_recentes">
  <h3>Pousadas Recentes</h3>
  <%@inns.last(3).each do |inn|%>
    <div class="pousada">
      <h3><%=link_to inn.brand_name, inn_path(inn.id) %></h3>
      <dl>
        <dt>Cidade: </dt>
        <dd><%=inn.city %></dd>
      </dl>
    <% end %>
    </div>
</div>

<div class="pousadas">
  <h3>Pousadas</h3>
  <%@inns.each do |inn|%>
    <% if inn.presence_in(@inns.last(3))  %>
    
    <% else %>
    <div class="pousada">
      <h4><%=link_to inn.brand_name, inn_path(inn.id) %></h4>
      <dl>
        <dt>Cidade: </dt>
        <dd><%=inn.city %></dd>
      </dl>
      <% end %>
  <% end %>
    </div>
</div>