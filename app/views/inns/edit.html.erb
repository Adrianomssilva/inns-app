<h2>Edite sua Pousada</h2>

<% if @inn.errors.any? %>
  <p>Verifique os erros abaixo</p>
  <ul>
    <%@inn.errors.full_messages.each do |msg|%>
      <li><%=msg%></li>
      <% end %>
  </ul>
<% end %>

<%= form_with(model: @inn) do |f| %>
  <div>
  <%= f.label :brand_name%>
  <%= f.text_field :brand_name%>
  </div>
  <div>
  <%= f.label :corporate_name%>
  <%= f.text_field :corporate_name%>
  </div>
  <div>
  <%= f.label :registration_number%>
  <%= f.text_field :registration_number%>
  </div>
  <div>
  <%= f.label :phone%>
  <%= f.text_field :phone%>
  </div>
  <div>
  <%= f.label :email%>
  <%= f.email_field :email%>
  </div>
  <div>
  <%= f.label :address%>
  <%= f.text_field :address%>
  </div>
  <div>
  <%= f.label :neighborhood%>
  <%= f.text_field :neighborhood%>
  </div>
  <div>
  <%= f.label :state%>
  <%= f.text_field :state%>
  </div>
  <div>
  <%= f.label :city%>
  <%= f.text_field :city%>
  </div>
  <div>
  <%= f.label :cep%>
  <%= f.text_field :cep%>
  </div>
  <div>
  <%= f.label :payment_options%>
  <%= f.select :payment_options, ['Cart達o', 'Cart達o Pix', 'Pix', 
                                  'Dinheiro', 'Dinheiro Cart達o Pix']%>
  </div>
  <div>
  <%= f.label :pets%>
  <%= f.select :pets, ['Sim', 'N達o']%>
  </div>
  <div>
  <%= f.label :policies%>
  <%= f.text_area :policies%>
  </div>
  <div>
  <%= f.label :check_in%>
  <%= f.text_field :check_in%>
  </div>
  <div>
  <%= f.label :check_out%>
  <%= f.text_field :check_out%>
  </div>
  <div>
  <%= f.label :description%>
  <%= f.text_area :description%>
  </div>
  <div>
  <%= f.submit %>
  </div>
<% end %>