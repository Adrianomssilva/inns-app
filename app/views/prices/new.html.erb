<h2>Cadastre um pre√ßo personalizados para o <%=@room.name%></h2>

<% if @price.errors.any? %>
  <p>Verifique os erros abaixo</p>
  <ul>
    <%@price.errors.full_messages.each do |msg|%>
      <li><%=msg%></li>
      <% end %>
  </ul>
<% end %>


<%= form_with(model: [@room, @price]) do |f| %>
    <%= f.label :value %>
    <%= f.text_field :value %>
    <%= f.label :date_start %>
    <%= f.date_field :date_start %>
    <%= f.label :date_end %>
    <%= f.date_field :date_end %>
    <%= f.submit %>
<% end %>